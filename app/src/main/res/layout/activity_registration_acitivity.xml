<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrationAcitivity"
    android:background="@drawable/gradientbackground"
    android:textColor="#fff">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="55dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="55dp"
                android:gravity="center"
                android:text="Registration"
                android:textColor="@color/colorText"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2"
                tools:ignore="MissingConstraints" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:gravity="center">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_profile"
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:src="@drawable/account_circle" />
                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/btn_click"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="160dp"
                    android:layout_marginTop="180dp"
                    android:backgroundTint="@color/white"
                    android:src="@drawable/camera" />

            </RelativeLayout>


            <EditText
                android:visibility="gone"
                android:id="@+id/policyId"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:background="@color/white"
                android:ems="10"
                android:textAlignment="center"
                android:hint="Enter Policy No"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:textColor="#000"
                android:textColorHint="@color/colorHint"
                android:textCursorDrawable="@drawable/cursor" />


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"
                android:background="@android:color/white">

                <EditText
                    android:id="@+id/et_vendorcode"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toStartOf="@+id/verify_icon"
                    android:background="@android:color/transparent"
                    android:hint="Vendor Code"
                    android:maxLines="1"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:textSize="16dp" />

                <ImageView
                    android:id="@+id/verify_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="20dp"
                    android:adjustViewBounds="true"
                    android:padding="10dp"
                    android:src="@drawable/ic_verify" />
            </RelativeLayout>


            <LinearLayout
                android:visibility="gone"
                android:id="@+id/vendordetail_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">
                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:text="Vendor Details"
                    android:textColor="@color/colorText"
                    android:textColorHint="@color/colorHint"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:hint="Vendor Name : "
                    android:textAlignment="center"
                    android:textColor="@color/colorText"
                    android:textColorHint="@color/colorHint" />

                    <TextView
                        android:id="@+id/vendorName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:hint="Vendor Name "
                        android:textAlignment="center"
                        android:textColor="@color/colorText"
                        android:textColorHint="@color/colorHint" />


                </LinearLayout>


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:hint="Shop Name :"
                        android:textAlignment="center"
                        android:textColor="@color/colorText"
                        android:textColorHint="@color/colorHint" />

                    <TextView
                        android:id="@+id/vendorShopName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:hint="Shop Name"
                        android:textAlignment="center"
                        android:textColor="@color/colorText"
                        android:textColorHint="@color/colorHint" />


                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:layout_marginBottom="10dp"
                        android:textAlignment="center"
                        android:hint="Vendor Contact :"
                        android:textColor="@color/colorText"
                        android:textColorHint="@color/colorHint" />

                    <TextView
                        android:id="@+id/vendorContact"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:layout_marginBottom="10dp"
                        android:textAlignment="center"
                        android:hint="Vendor Contact"
                        android:textColor="@color/colorText"
                        android:textColorHint="@color/colorHint" />


                </LinearLayout>

            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:text="Select Policy :"
                android:textColor="@color/colorText"
                android:textColorHint="@color/colorHint"
                android:textSize="18sp" />


            <Spinner
                android:id="@+id/selectpolicy"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:gravity="center"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:background="@android:color/white"
                android:scrollbarStyle="outsideOverlay"
                android:textAlignment="center"/>



            <EditText
                android:id="@+id/customerMail"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:textAlignment="center"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:background="@color/white"
                android:ems="10"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:padding="10dp"
                android:textColor="#000"
                android:textColorHint="@color/colorHint"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/customerNumber"
                tools:ignore="MissingConstraints" />

            <EditText
                android:id="@+id/customerName"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:background="@color/white"
                android:ems="10"
                android:textAlignment="center"
                android:hint="Customer Name "
                android:inputType="text"
                android:padding="10dp"
                android:shadowColor="@color/colorAccent"
                android:textColor="#000"
                android:textColorHint="@color/colorHint"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView"
                tools:ignore="MissingConstraints" />

            <EditText
                android:id="@+id/customerNumber"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:background="@color/white"
                android:ems="10"
                android:maxLength="10"
                android:hint="Phone Number"
                android:textAlignment="center"
                android:inputType="number"
                android:padding="10dp"
                android:textColor="#000"
                android:textColorHint="@color/colorHint"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/customerName"
                tools:ignore="MissingConstraints" />

            <EditText
                android:id="@+id/downpayment"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:background="@color/white"
                android:ems="10"
                android:maxLength="7"
                android:hint="Down Payment"
                android:textAlignment="center"
                android:inputType="number"
                android:padding="10dp"
                android:textColor="#000"
                android:textColorHint="@color/colorHint"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/customerName"
                tools:ignore="MissingConstraints" />

            <EditText
                android:id="@+id/emi_tenure"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:background="@color/white"
                android:ems="10"
                android:maxLength="2"
                android:hint="EMI Months"
                android:textAlignment="center"
                android:inputType="number"
                android:padding="10dp"
                android:textColor="#000"
                android:textColorHint="@color/colorHint"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/customerName"
                tools:ignore="MissingConstraints" />

            <Spinner
                android:id="@+id/emi_date"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:background="@color/white"
                android:ems="10"
                android:gravity="center"
                android:textSize="18dp"
                android:entries="@array/date"
                android:hint="EMI Date "
                android:textAlignment="center"
                android:inputType="number"
                android:padding="10dp"
                android:textColor="#000"
                android:textColorHint="@color/colorHint"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/customerName"
                tools:ignore="MissingConstraints" />


            <TextView
                android:id="@+id/spinner1"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/input_bg"
                android:gravity="center"
                android:textColor="#fff"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/customerMail"
                tools:ignore="MissingConstraints" />


            <CheckBox
                android:id="@+id/loanBox"
                android:layout_width="136dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="22dp"
                android:layout_marginEnd="22dp"
                android:buttonTint="@color/colorText"
                android:text="Locker"
                android:textColor="@color/colorText" />

            <Spinner
                android:id="@+id/spinner3"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/input_bg"
                android:gravity="center"
                android:textColor="@color/colorText"
                android:textColorHint="@color/colorHint"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"

                tools:ignore="MissingConstraints" />


            <Spinner
                android:id="@+id/spinnerPlan"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/input_bg"
                android:gravity="center"
                android:textColor="@color/colorText"
                android:textColorHint="@color/colorHint"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="MissingConstraints" />


            <EditText
                android:id="@+id/amount"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:background="@color/white"
                android:ems="10"
                android:textAlignment="center"
                android:hint="E.M.I Amount"
                android:inputType="number"
                android:padding="10dp"
                android:textColor="#000"
                android:textColorHint="@color/colorHint"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/customerNumber"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/dateTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:hint="Please Select Start Date"
                android:onClick="setDate"
                android:text="Start Date :"
                android:textAlignment="center"
                android:textColor="@color/colorText"
                android:textColorHint="@color/colorHint"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/endDateView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:onClick="endDate"
                android:text="EMI Date : Select EMI date"
                android:textColor="@color/colorText"
                android:textColorHint="@color/colorHint"
                android:textSize="18sp" />


            <EditText
                android:id="@+id/comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:background="@color/white"
                android:hint="Enter Notes /  Comments :"
                android:textAlignment="center"
                android:padding="10dp"
                android:textColor="#000"
                android:textColorHint="@color/colorHint"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="MissingConstraints" />


